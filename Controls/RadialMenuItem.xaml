<UserControl x:Class="RadiMenu.Controls.RadialMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fluent="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
             Width="36" Height="36"
             Cursor="Hand">
    
    <Grid x:Name="RootGrid">
        <!-- Toggled Background (Blue dot/ring) -->
        <Border x:Name="ToggledBackground" 
                Background="#0078D4" 
                CornerRadius="18" 
                Opacity="0"
                Width="36" Height="36"/>

        <!-- Fluent Icon (Fluent UI System Icons) -->
        <fluent:SymbolIcon x:Name="FluentIconControl"
                          FontSize="20"
                          Foreground="#FFFFFF"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Opacity="0.7"/>
    </Grid>
</UserControl>
