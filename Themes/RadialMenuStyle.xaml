<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Colors -->
    <Color x:Key="MenuBackgroundColor">#E0202020</Color>
    <Color x:Key="CenterBackgroundColor">#FF303030</Color>
    <Color x:Key="AccentColor">#FF0078D4</Color>
    <Color x:Key="AccentGlowColor">#800078D4</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="{StaticResource MenuBackgroundColor}"/>
    <SolidColorBrush x:Key="CenterBackgroundBrush" Color="{StaticResource CenterBackgroundColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    
    <!-- Effects -->
    <DropShadowEffect x:Key="MenuShadow" 
                      BlurRadius="40" 
                      ShadowDepth="0" 
                      Color="Black" 
                      Opacity="0.6"/>
    
    <DropShadowEffect x:Key="GlowEffect"
                      BlurRadius="20"
                      ShadowDepth="0"
                      Color="{StaticResource AccentColor}"
                      Opacity="0.5"/>
    
    <!-- Animations (for use in Storyboards) -->
    
</ResourceDictionary>
